{
  "compilerOptions": {
    "outDir": "dist",//输出目录
    "sourceMap": true,//采用sourcemap
    "target": "es2016",//目标语法 
    "module": "esnext",//模块格式
    "moduleResolution": "node",//模块解析方式
    "strict": false,//严格模式，否则会让填类型 
    "resolveJsonModule": true,//借西json模块
    "esModuleInterop": true,//允许通过es6语法引入commonjs模块
    "jsx": "preserve",//jsx不转义
    "lib": ["ESNext","DOM"],//支持的类库esnext及dom
    "baseUrl": "./",
    "paths": {
    "@vue/*":["packages/*/src"]
    }
  }
}
